rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write only to authenticated users for users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read/write their own exhibition registrations
    match /exhibition_registrations/{docId} {
      allow read, write: if request.auth != null;
    }
     match /exhibitions/{docId} {
      allow read, write: if request.auth != null;
    }

    // Allow public users to register a business
    match /businesses/{docId} {
      allow read, write: if true;
    }
  }
}
